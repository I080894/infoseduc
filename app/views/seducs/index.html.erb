    <font  size="2">
    <table border="2" width="100%">
    <% for seduc in @seducs %>
     <tr>
        <th bgcolor="gray">Departamento</th>
        <th colspan="2"bgcolor="gray">Servidor</th>
        <th colspan="2" bgcolor="gray">Rede</th>

      </tr>
    <tr>
      <td><%=h seduc.departamento.depto %></td>
      <td colspan="2"><%=h seduc.servidor %></td>
       <td colspan="2"><%=h seduc.rede %></td>
    </tr>
    <tr>
        <th rowspan="4" ></th>
        <th colspan="2"bgcolor="gray">Internet</th>
        <th colspan="2" bgcolor="gray">Observções</th>
    </tr>
    <tr>
      <td colspan="2"> <%=h seduc.internet %></td>
      <td colspan="2"><%=h seduc.obs %></td>
    </tr>
    <tr>
        
        <th bgcolor="gray">NºComp</th>
        <th bgcolor="gray">Computador</th>
        <th bgcolor="gray">NºImp</th>
        <th bgcolor="gray">Impressora</th>
     </tr>
     <tr>

      <td><%=h seduc.num_comp %></td>
      <td><%=h seduc.computador %></td>
      <td><%=h seduc.num_imp %></td>
      <td><%=h seduc.impressora %></td>
     </tr>
    <tr>
  
     <td colspan="12">
        <div class="botao">
        <table>
           <td><%= button_to('Exibir',{:action => "show", :id =>seduc}, :method => "get") %></td>
           <td> <%= button_to('Editar',{:action => "edit", :id =>seduc}, :method => "get") %></td>
           <td><%= button_to('Excluir',{:action => "destroy", :id =>seduc}, :confirm => 'Confirma exclusão?', :method => "delete")%></td>
        </table>
        </div>
       </td>
    </tr>
    <% end %>
