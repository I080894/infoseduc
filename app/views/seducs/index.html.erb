   <table width="100%">
    <tr>
     <td width="8%" align="left"><%= button_to 'Cadastrar', new_seduc_path %></td>
     <td width="8%" align="left"><%= button_to 'Voltar', homes_path, {:method => "get"}%></td>
     <td width="8%" align="left"><input type="Button" Value="Imprimir" onclick="javascript:window.print()"></td>
     <td align="right">
       <div class="botao">
         <table>
        <tr>
        <% form_tag seducs_path, :method => 'get' do %>
        <td align="right"><font size="4"> Digite Departamento:</font>
           <%= text_field_tag :search, params[:search] %>
           <%= submit_tag "Filtrar", :name => nil %>
        </td>
        <% end %>
        </tr>
     </table>
     </div>
     </td>
   </tr>
