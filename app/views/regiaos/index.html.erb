     <fieldset><legend><font  size=5> Região</font></legend>
       <table border="2" width="100%">
         
         <% @regiaos.each do |reg| %>
             <tr>
                <th bgcolor="gray" width="8%"><font size="2">Nome</font></th>
                <th bgcolor="gray"><font size="2">Bairros</font></th>
                <th bgcolor="gray"><font size="2">Unidades</font></th>
                <th bgcolor="gray"><font size="2">Estagiário</font></th>
                <th bgcolor="gray"><font size="2">Observações</font></th>
             </tr>
             <tr>
                <td align="left"><font size="2"><%=h reg.regiao %></font></td>
                <td align="left"><font size="2"><%=h reg.local %></font></td>
                <td align="center"><font size="2"><%=h reg.unidade %></font></td>
                <% reg.estagiarios.each do |est| %>
                  <%if est.desligado == 0 then%>
                    <td align="left"><font size="2"><%=h est.nome %></font></td>
                  <%end%>
                <%end%>
                <td align="left"><font size="2"><%=h reg.obs %></font></td>
             </tr>
             <tr>
                <td colspan="7">
                <div class="botao">
                  <table>
                    <td><%= button_to('Exibir',{:action => "show", :id =>reg}, :method => "get") %></td>
                    <% if current_user.has_role?('administrador') or current_user.has_role?('estagiario SEDUC') %>
                       <td> <%= button_to('Editar',{:action => "edit", :id =>reg}, :method => "get") %></td>
                       <td><%= button_to('Excluir',{:action => "destroy", :id =>reg}, :confirm => 'Confirma exclusão?', :method => "delete")%></td>
                    <%end%>
                  </table>
                </div>
               </td>
            </tr>

         <% end %>
         
      </table>
   </fieldset>


</table>
