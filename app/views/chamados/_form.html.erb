<% form_for(@chamados) do |f| %>
<%= f.error_messages %>
<font  size="2">
<table width="100%">
  <tr>
    <td valign="top"width="50% ">
     <fieldset><legend><font  size=4> Solicitação</font></legend>
     <table>
       <tr>
         <td align="left"><b>Data Solicitação:</b></td>
         <td align="left"> <%= f.date_select(:data_sol, :order => [:day, :month, :year], :start_year => (Date.today.year)) %></td>
       </tr>
       <tr>
         <td align="left"><b>Solicitante:</b></td>
         <td align="left"><%= f.text_field :solicitante, :size => 38 %></td>
       </tr>
       <tr>
         <td align="left"><b> Unidade:</b></td>
         <td align="left"><%= f.collection_select :unidade_id, @unidades, :id, :nome, :include_blank => ' -- Selecione -- ', :size=> 30 %>
        </td>
       </tr>
      <tr>
         <td align="left"><b>Departamento:</b></td>
         <td align="left"> <%= f.text_field :depto, :size => 38%>
       </tr>
       <tr>
         <td align="left"><b>Forma Solicitação:</b></td>
         <td align="left"><%= f.select :forma_sol, SOLICITACAO, :include_blank => '---Selecione---',  :size =>20  %></td>
       </tr>
       <tr>
         <td align="left" valign="top"><b> Descrição Problema:</b></td>
         <td align="left"><%= f.text_area :problema, :cols =>"42", :rows => "5" %></td>
       </tr>
        <tr>
            <td align="left" valign="top"><b>Observação:</b></td>
            <td align="left"><%= f.text_area :obs, :cols =>"42", :rows => "2" %></td>
        </tr>
        <table  width="100%" align="center">
        <tr>
            <td align="left" width="6%">
              <font size="4" color="red">
              <div id='Certeza'>
                <%= f.submit "Salvar" %>
              </div>
              </font>
            </td>
            <%end%>
           <td align="left" ><%= button_to 'Voltar', homes_path, {:method => "get"}%></td>
         </tr>
       </table>
    </table>
  </fieldset>
 </td>
 </tr>
</table>

