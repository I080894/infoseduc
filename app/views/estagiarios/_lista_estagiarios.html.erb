       <td><%=h estagiarios.matricula %></td>
       <td><%=h estagiarios.periodo_est %></td>
       <td><%=h estagiarios.data_ingresso.strftime("%d/%m/%Y") %></td>
       <td><%=h estagiarios.data_termino.strftime("%d/%m/%Y") %></td>
       <td><%=h estagiarios.aval %></td>
