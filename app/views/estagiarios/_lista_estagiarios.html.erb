    </tr>
     <tr>
        <%if estagiarios.unidade_id.nil?%>
           <%=h estagiarios.regiao.regiao %>
         <%else%>
           <%=h estagiarios.unidade.nome %>
        <%end%>
        <td><%=h estagiarios.periodo_trab %></td>
        <td><%=h estagiarios.responsavel %></td>
