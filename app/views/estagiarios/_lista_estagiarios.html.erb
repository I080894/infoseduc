           <td><%=h estagiarios.data_admissao("%d/%m/%Y") %></td>
        <%else%>
           <td><%=h estagiarios.data_admissao.strftime("%d/%m/%Y") %></td>
        <%end%>


        <% if estagiarios.desligado == 1 %>


              <% if estagiarios.data_desliga.nil? then %>
                 <td><%=h estagiarios.data_desliga("%d/%m/%Y") %></td>
              <%else%>
                 <td><%=h estagiarios.data_desliga.strftime("%d/%m/%Y") %></td>
              <%end%>

         <%else%>
              EM ATIVIDADE
          <%end%>
          </tr>

