<% form_for(@unidades) do |f| %>
<%= f.error_messages %>
<font  size="2">
 <table width="100%">
  <tr>
    <td width="50%">
      <table>
       <tr>
         <td align="left"><b>Nome:</b></td>
         <td><%= f.text_field :nome, :size =>41 %></td>
             <%= observe_field :unidade_nome,
              :with => :unidade_nome,
              :url => { :action => 'mesmo_nome' } %>
       </tr>
       <tr>
           <td colspan="2">
            <font size="4" color="red">
              <div id='nome_aviso'></div>
            </font>
          </td>
       </tr>

       <tr>
         <td align="left"><b> Endereço:</b></td>
         <td> <%= f.text_field :endereco,:size =>31 %>
             <b>Nº </b>
             <%= f.text_field :num, :size => 2 %></td>
       </tr>
       <tr>
         <td align="left"><b> Bairro:</b></td>
         <td><%= f.text_field :bairro, :size =>41 %></td>
       </tr>
       <tr>
         <td align="left"><b> Complemento:</b></td>
         <td><%= f.text_field :complemento, :size =>20%>
            <b>Fone</b>
            <%= f.text_field :fone, :size =>11%>
         </td>
       </tr>
       <tr>
         <td align="left"><b>Tipo:</b></td>
         <td align="left"><%= f.collection_select  :tipo_id, @tipos, :id, :nome, :include_blank => ' -- Selecione -- ' %></td>
       </tr>
       <tr>
         <td align="left"><b>Região:</b></td>
         <td align="left"><%= f.collection_select  :regiao_id, @regiaos, :id, :regiao, :include_blank => ' -- Selecione -- ' %></td>
       </tr>
       <tr>
         <td align="left"><b>E_mail:</b></td>
         <td><%= f.text_field :email, :size =>41 %></td>
       </tr>
       <tr>
         <td align="left"><b>Diretor:</b></td>
         <td> <%= f.text_field :diretor, :size =>41%></td>
       </tr>
       <tr>
         <td align="left"><b>Coordenador:</b></td>
         <td> <%= f.text_field :coordenador, :size =>41%></td>
       </tr>
     </table>
    </td>
    <td>
      <table>
       <tr>
        <td valign="top"><b>Observações:</b></td>
        <td><%= f.text_area(:obs, :cols =>"45", :rows => "14") %></td>
       </tr>
      </table>
    </td>
  </tr>
  <table>
      <tr>
        <div id='Certeza'>
           <td align="left" width="8%"><%= f.submit "Salvar" %></td>
        </div>
        <% end %>
        <td align="left" ><%= button_to 'Voltar', homes_path, {:method => "get"}%></td>
      </tr>
    </table>
  </table>
</font>
