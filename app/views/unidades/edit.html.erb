<fieldset><legend><font  size=5> UNIDADES</font></legend>
<font  size="2">
 <table width="100%">
  <tr>
    <td width="50%">
      <table>
       <% form_for(@unidades) do |f| %>
       <%= f.error_messages %>
       <tr>
         <td align="left"><b>Nome:</b></td>
         <td> <%= f.text_field :nome, :size =>40 %></td>
       </tr>
       <tr>
         <td align="left"><b> Endereço:</b></td>
         <td> <%= f.text_field :endereco,:size =>28 %>
             <b>Nº: </b>
             <%= f.text_field :num, :size => 2 %></td>
       </tr>
        <tr>
         <td align="left"><b> Endereço:</b></td>
         <td><%= f.text_field :bairro, :size =>40 %></td>
       </tr>
       <tr>
         <td align="left"><b> Complemento:</b></td>
         <td><%= f.text_field :complemento, :size =>18 %>
            <b>Fone</b>
            <%= f.text_field :fone, :size =>10%>
         </td>
       </tr>
       <tr>
         <td align="left"><b>Tipo Unidade:</b></td>
         <td align="left"><%= f.collection_select  :tipo_id, @tipos, :id, :nome, :include_blank => ' -- Selecione -- ' %></td>
       </tr>
       <tr>
         <td align="left"><b>E_mail:</b></td>
         <td><%= f.text_field :email, :size =>40 %></td>
       </tr>
       <tr>
         <td align="left"><b>Diretor:</b></td>
         <td> <%= f.text_field :diretor, :size =>40%></td>
       </tr>
       <tr>
         <td align="left"><b>Coordenador:</b></td>
         <td> <%= f.text_field :coordenador, :size =>40%></td>
       </tr>
     </table>
    </td>
    <td>
      <table>
       <tr>
        <td valign="top"><b>Observações:</b></td>
        <td><%= f.text_area(:obs, :cols =>"45", :rows => "14") %></td>
       </tr>
      </table>
    </td>
  </tr>


 </table>
</font>
</fieldset>
<table width="100%">
  <tr>
      <div id='Certeza'>
         <td align="left" width="6%"> <%= f.submit "Salvar" %></td>
       </div>
      <%end%>
     <td align="left" width="6%"><%= button_to 'Voltar', homes_path, {:method => "get"}%></td>
     <td align="left" width="10"><%=  button_to('Exibir',{:action => "show", :id =>@unidades}, :method => "get")%></td>
   </tr>
</table>



