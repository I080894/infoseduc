<font  size="2">
 <table width="100%"  >
  <tr>
    <td width="50%" valign="top">
      <% form_for(@departamentos) do |f| %>
        <fieldset><legend><font  size=4> Cadastrar</font></legend>
         <table>
           <tr>
             <td width="20%"align="left" ><b>Departamento:</b>
                   <%= f.text_field :depto %>
                    <%= observe_field 'departamento_depto',
                      :frequency => 0.1,
                      :update => "cadastrados",
                      :with => :departamento_depto,
                     :url => { :action => 'lista' } %>
            </td>
          </tr>
          <tr>
            <td align="left">
                 <div class="botao">
                    <%= f.submit "Salvar" %>
                 </div>
            </td>
          </tr>
         </table>
        </fieldset>
      <% end %>
     </td>
     <td width="50%" align="">
         <fieldset><legend><font  size=4> Cadastrados</font></legend>
          <table width="100%">
           <tr>
              <td align="left">
                <div id="cadastrados"></div>
              </td>
           </tr>
          </table>
         </fieldset>
       </td>
  </tr>
</table>

</font>
</fieldset>
<table>
  <tr>
    <td colspan="12">
       <div class="botao">
        <table>
           <td align="left" width="6%"><%= button_to 'Voltar', homes_path, {:method => "get"}%></td>
           <td align="left"><input type="Button" Value="Imprimir" onclick="javascript:window.print()"></td>
        </table>
        </div>
    </td>
  </tr>
</table>