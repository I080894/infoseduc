<<br/>
<fieldset><legend><font  size=5> RELATÓRIOS ETINERANTES</font></legend>
<font  size="2">
 <table width="100%">
  <tr>
    <td width="50%">
      <table>
       <% form_for(@relatorios) do |f| %>
       <%= f.error_messages %>
       <tr>
         <td align="left"><b>Unidade:</b></td>
         <td align="left"><%= f.collection_select :unidade_id, @unidades, :id, :nome, :include_blank => ' -- Selecione -- ' %>
       </tr>
       <tr>
         <td align="left"><b> Estagiário:</b></td>
         <td align="left"><%= f.collection_select :estagiario_id, @estagiarios, :id, :nome, :include_blank => ' -- Selecione -- ' %></td>

       </tr>
       <tr>
         <td align="left"><b>Responsável Unidade:</b></td>
         <td><%= f.text_field :responsavel, :size =>42 %></td>
       </tr>
       <tr>
         <td align="left"><b>Data:</b></td>
         <td align="left"><%= f.date_select(:data, :order => [:day, :month, :year], :start_year => (Date.today.year)) %></td>
       </tr>
       <tr>
        <td valign="top" align="left"><b>Observações:</b></td>
        <td><%= f.text_area(:obs, :cols =>"47", :rows => "8") %></td>
       </tr>
      </table>
    <td width="50%">
      <table>
       <tr>
         <td  valign="top"align="left"><b>Descrição Problema:</b></td>
         <td > <%= f.text_area :problema, :cols =>"45", :rows => "8"%></td>
       </tr>

       <tr>
         <td  valign="top"align="left"><b>Descrição Procedimento:</b></td>
         <td> <%= f.text_area :procedimentos, :cols =>"45", :rows => "8"%></td>
       </tr>

     </table>
    </td>
  </tr>
 </table>
</font>
</fieldset>
<table  width="100%" align="center">
  <tr>
      <td align="left" width="6%">
        <font size="4" color="red">
        <div id='Certeza'>
          <%= f.submit "Salvar" %>
        </div>
        </font>
      </td>
      <%end%>
     <td align="left" ><%= button_to 'Voltar', homes_path, {:method => "get"}%></td>
   </tr>
</table>
<br/>