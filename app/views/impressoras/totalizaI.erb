 <table  align="center" width="100%">
  <tr>
  <td>
  <fieldset><legend><font  size=5> IMPRESSORAS</font></legend>
  <div class="botao">
   <table width="100%">
    <tr>
       <td width="6%"><%= button_to 'Voltar', homes_path, {:method => "get"}%></td>
       <td align="left"><input type="Button" Value="Imprimir" onclick="javascript:window.print()"></td>

    </tr>
  </table>
  </div>
   <table align="center" width="100%">
    <tr>
      <td valign="top" width="20%">
        <fieldset><legend><font  size=5> SEDUC</font></legend>
         <br/><br/>
         <table border="1" width="100%">
         <%$totals = 0%>
          <tr>
             <th  valign="top" align="left" bgcolor="gray"><font  size="1">Usuário</font></th>
             <th  valign="top" align="left" bgcolor="gray"><font  size="1">Config.</font></th>
             <th  valign="top" align="center" bgcolor="gray"><font  size="1">Nº</font></th>
          </tr>
         
          <% for imp in @impressoras %>
          <%if imp.unidade.nome == 'SEDUC'%>
          <tr>
             <td valign="top"align="left"><font  size="1"><%=h imp.user %></font></td>
             <td valign="top"align="left"><font  size="1"><%=h imp.config %></font></td>
             <td  valign="top"><font  size="1"><%=h imp.quant %></font></td>
             <%$totals= $totals + imp.quant%>


          </tr>

          <tr>
            <td colspan="12">
             <div class="botao">
              <table>
               <td><%= button_to('Exibir',{:controller => "impressoras",:action => "show", :id =>imp}, :method => "get") %></td>
              </table>
             </div>
           </td>
          </tr>
         <% end %>
         <% end %>
         <tr>
            <td colspan="3" align="left"><font  size="2"><b> Total => <%= $totals %></b></font> </td>
          </tr>
        </table>
       </fieldset>
      </td>
      <td valign="top" width="25%">
        <fieldset><legend><font  size=5> Laboratórios</font></legend>
         <br/><br/>
         <table border="1" width="100%">
         <%$totalC = 0%>
          <tr>
             <th  valign="top" align="left" bgcolor="gray"><font  size="1">Unidade</font></th>
             <th  valign="top" align="left" bgcolor="gray"><font  size="1">Usuário</font></th>
             <th  valign="top" align="left" bgcolor="gray"><font  size="1">Configuração</font></th>
             <th  valign="top" align="center" bgcolor="gray"><font  size="1">Nº</font></th>
          </tr>
          <% for imp in @impressoras %>
          <%if imp.tipo_controle.nome == 'LABORATÓRIO'%>
           <tr>
             <td  valign="top"align="left"><font  size="1"><%=h imp.unidade.nome %></font></td>
             <td valign="top"align="left"><font  size="1"><%=h imp.user %></font></td>
             <td valign="top"align="left"><font  size="1"><%=h imp.config %></font></td>
             <td  valign="top"><font  size="1"><%=h imp.quant %></font></td>
             <%$totalC = $totalC + imp.quant%>
          </tr>
          <tr>
            <td colspan="12">
             <div class="botao">
              <table>
               <td><%= button_to('Exibir',{:controller => "impressoras",:action => "show", :id =>imp}, :method => "get") %></td>
              </table>
             </div>
           </td>
          </tr>
         <% end %>
         <% end %>
         <tr>
            <td colspan="3" align="left"><font  size="2"><b> Total  => <%= $totalC %></b></font> </td>
          </tr>
        </table>
       </fieldset>
      </td>
      <td  valign="top" width="55%">
        <fieldset><legend><font  size=5> Administração</font></legend>
         <%$totalC1 = 0%>
         <table width="100%">
           <tr><td  valign="top" width="50%">
             <fieldset><legend><font  size=4> Pertencente à SEDUC</font></legend>
              <table  border="1" width="100%">
               <tr>
                  <th  valign="top" align="left" bgcolor="gray"><font  size="1">Unidade</font></th>
                  <th  valign="top" align="left" bgcolor="gray"><font  size="1">Usuário</font></th>     
                  <th  valign="top" align="left" bgcolor="gray"><font  size="1">Configuração</font></th>
                  <th  valign="top" align="center" bgcolor="gray"><font  size="1">Nº</font></th>

               </tr>
              <% for imp in @impressoras %>
              <%if imp.tipo_controle.nome == 'ADMINITRAÇÃO'%>
              <%if imp.unidade_id != 53 then%>
              <tr>
                 <td valign="top"align="left"><font  size="1"><%=h imp.unidade.nome %></font></td>
                 <td valign="top"align="left"><font  size="1"><%=h imp.user %></font></td>
                 <td valign="top"align="left"><font  size="1"><%=h imp.config %></font></td>
                 <td valign="top"><font  size="1"><%=h imp.quant %></font></td>
                 <%$totalC1= $totalC1 + imp.quant%>
              </tr>
              <tr>
                <td colspan="4">
                <div class="botao">
                  <table>
                    <td><%= button_to('Exibir',{ :controller => "impressoras", :action => "show", :id =>imp}, :method => "get") %></td>
                 </table>
               </div>
               </td>
              </tr>
             <% end %>
             <% end %>
             <% end %>
           <tr>
            <td colspan="3" align="left"><font  size="2"><b> Total => <%= $totalC1 %></b></font> </td>
          </tr>

           </table>
          </filedset>
         </td>
         <td  valign="top" width="50%">
             <fieldset><legend><font  size=4> Pertencente à Terceiros</font></legend>
              <table  border="1" width="100%">
                <%$totalC2 = 0%>
               <tr>
                  <th  valign="top" align="left" bgcolor="gray"><font  size="1">Unidade</font></th>
                  <th  valign="top" align="left" bgcolor="gray"><font  size="1">Usuário</font></th>
                  <th  valign="top" align="left" bgcolor="gray"><font  size="1">Configuração</font></th>
                  <th  valign="top"align="center" bgcolor="gray"><font  size="1">Nº</font></th>

               </tr>
              <% for imp in @impressoras %>
              <%if imp.tipo_controle.nome == 'TERCEIROS'%>
              <%if imp.unidade_id != 53 then%>
              <tr>
                 <td  valign="top"align="left"><font  size="1"><%=h imp.unidade.nome %></font></td>
                 <td valign="top"align="left"><font  size="1"><%=h imp.user %></font></td>
                 <td valign="top"align="left"><font  size="1"><%=h imp.config %></font></td>
                 <td valign="top"><font  size="1"><%=h imp.quant %></font></td>
                 <%$totalC2 = $totalC2 + imp.quant%>
              </tr>
              <tr>
                <td colspan="4">
                <div class="botao">
                  <table>
                    <td><%= button_to('Exibir',{ :controller => "impressoras", :action => "show", :id =>imp}, :method => "get") %></td>
                 </table>
               </div>
               </td>
              </tr>
             <% end %>
             <% end %>
             <% end %>
            <tr>
              <td colspan="3" align="left"><font  size="2"><b> Total => <%= $totalC2 %></b></font> </td>
            </tr>

           </table>
          </filedset>
         </td>

        </table>
     </fieldset>
     </td>
    </tr>
    <tr>
      <td colspan="3" align="left"><font color="black"  size="2"><b> TOTAL GERAL IMPRESSORAS: <%= $totalC2 + $totalC1 + $totalC + $totals%></b></font> </td>
    <tr
   </table>
   </fieldset>
  </td>
  </tr>

